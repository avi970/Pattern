import java.util.Scanner;

public class pattern4 {

	public static void main(String[] args) {
		
	
		Scanner scn=new Scanner(System.in);
		int n=scn.nextInt();
		char ch=65;
		
	
		for(int j=0;j<n;j++) {
			int i=0;
			
		while(i<2*(n-j)) {
			System.out.print(" ");
			i++;
		}
		for(int k=0;k<=j;k++) {
			System.out.print(ch+++" ");
		
		

	}
		System.out.println();
		

}}};
